@{
    ViewBag.Title = "导航图管理";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<link href="~/Content/webuploader/webuploader.css" rel="stylesheet" />
@Html.AppendCssFile("/Areas/DM_APPManage/Views/DM_Banner/Form.css")
<div class="lr-form-wrap" id="form">
    <div class="col-xs-12 lr-form-item">
        <div class="lr-form-item-title">导航图标题<font face="宋体">*</font></div>
        <input id="b_title" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">导航图类型<font face="宋体">*</font></div>
		 <div id="b_type"><ul><li data-value="0">首页导航图</li><li data-value="1">任务页导航图</li></ul></div>
    </div>
	    <div class="col-xs-6 lr-form-item">
        <div class="lr-form-item-title">导航图参数<font face="宋体">*</font></div>
        <input id="b_param" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
		<div class="lr-wrap col-xs-12 lr-form-item" >
	   <div class="lr-form-item-title">任务图片<font face="宋体">*</font></div>
		<div class="file" >
			<input type="file" name="uploadFile" id="uploadFile">
		</div>
	</div>

</div>
<script src="~/Content/webuploader/webuploader.nolog.min.js"></script>
@Html.AppendJsFile("/Views/LR_Content/script/lr-fileupload.js", "/Areas/DM_APPManage/Views/DM_Banner/Form.js")
